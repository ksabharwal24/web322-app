<div class="row">
    <div class="col-md-12">
        <h2>Categories</h2>
        <hr />
        {{#if categories}}
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Category ID</th>
                            <th>Name</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                    {{#each categories}}
                        <tr>
                            <td><a href="/items?category={{this.id}}">{{this.id}}</a></td>
                            <td><a href="/items?category={{this.id}}">{{this.category}}</a></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{else}}
            <p>No categories found</p>
        {{/if}}
    </div>
    <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
</div>

    
</div>
